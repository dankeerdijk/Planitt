<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="planitt.CreateAccountPage">
   <StackLayout Spacing="10"
                Margin="20"
                x:Name="containerStack"
                VerticalOptions="Center">
   <Label Text="maak een nieuwe account"
          HorizontalOptions="Center"
          Margin="0,0,0,50"
          />
   <Entry Placeholder="gebruikersnaam"
          Text="{Binding Username, Mode=TwoWay}"
          x:Name="gebruikersnaam"/>
   <Entry Placeholder="wachtwoord"
          Text="{Binding Password, Mode=TwoWay}"
          x:Name="wachtwoord"/>
   <Entry Placeholder="Herhaal wachtwoord"
          x:Name="wachtwoord2"/>
   <Entry Placeholder="email"
          Text="{Binding Email,Mode=TwoWay}"
          x:Name="email"/> 
        <Button Text="maak account aan"
                Clicked="Handle_Clicked"
                Margin="0,10,0,0"/>
   </StackLayout>
</ContentPage>
