<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="planitt.LoginPage">
 
    
    <StackLayout VerticalOptions="Center"
                 Padding="30">
        <Image x:Name="appLogoImage"
               HeightRequest="100"
               Aspect="AspectFit"
               Margin="0,0,0,100"
             
               />
        
        <Entry Placeholder="username"
               x:Name="username"
               Keyboard="Email"
               />
        <Entry Placeholder="password"
               x:Name="password"
               IsPassword="true"/>
        <Button Text="log in"
                Clicked="Handle_Clicked"/>
        <Button Text="nieuw? maak account aan"
                Clicked="Handle_Clicked_1"
                Margin="0,10"/>
    </StackLayout>
    
</ContentPage>
